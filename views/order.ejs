<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<%- include('./common/header1.ejs') %>
<section class="order-form m-4">
    <div class="container pt-4">
        <div class="row">
            <div class="col-12">
                <form action="/order" method="post">
                    <!-- First and Last Name -->
                    <div class="row mx-4">
                        <div class="col-6">
                            <label class="order-form-label" for="fname">First Name</label>
                        </div>
                        <div class="col-6">
                            <label class="order-form-label" for="lname">Last Name</label>
                        </div>
                        <div class="col-sm-6">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form1" class="form-control order-form-input" name="fname" />
                            </div>
                        </div>
                        <div class="col-sm-6 mt-2 mt-sm-0">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form2" class="form-control order-form-input" name="lname" />
                            </div>
                        </div>
                    </div>

                    <!-- Main Menu -->
                    <div class="row mt-3 mx-4">
                        <div class="col-12">
                            <label class="order-form-label" for="mainMenu">Main Menu</label>
                        </div>
                        <div class="col-12">
                            <div data-mdb-input-init class="form-outline">
                                <select id="mainMenu" class="form-control order-form-input" name="menu">
                                    <option value="" disabled selected>Select an option</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Sub Menu -->
                    <div class="row mt-3 mx-4">
                        <div class="col-12">
                            <label class="order-form-label" for="subMenu">Sub Menu</label>
                        </div>
                        <div class="col-12">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form5" class="form-control order-form-input" name="other" /> 
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="row mt-3 mx-4">
                        <div class="col-12">
                            <label class="order-form-label" for="address">Address</label>
                        </div>
                        <div class="col-12">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form5" class="form-control order-form-input" name="address" />
                            </div>
                        </div>

                        <!-- Street Address -->
                        <div class="col-12 mt-2">
                            <label class="form-label" for="form6">Street Address</label>
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form6" class="form-control order-form-input" name="saddress" />
                            </div>
                        </div>

                        <!-- City -->
                        <div class="col-sm-6 mt-2 pe-sm-2">
                            <label class="form-label" for="form7">City</label>
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form7" class="form-control order-form-input" name="city" />
                            </div>
                        </div>

                        <!-- Region -->
                        <div class="col-sm-6 mt-2 ps-sm-0">
                            <label class="form-label" for="form8">Region</label>
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form8" class="form-control order-form-input" name="region" />
                            </div>
                        </div>

                        <!-- Zip Code -->
                        <div class="col-sm-6 mt-2 pe-sm-2">
                            <label class="form-label" for="form9">Postal / Zip Code</label>
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" id="form9" class="form-control order-form-input" name="zip" />
                            </div>
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="row mt-3 mx-4">
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                                <label class="form-check-label" for="flexCheckDefault">I know what I need to know</label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center my-4">
                        <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                    </div>

                    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('./common/footer.ejs') %>
